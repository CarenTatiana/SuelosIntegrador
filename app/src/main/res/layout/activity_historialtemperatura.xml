<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hielo"
    android:orientation="vertical"
    tools:context=".Historialtemperatura">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="114dp"
        android:layout_height="112dp"
        app:srcCompat="@drawable/log" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="Historial de Temperatura durante el ultimo año "
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginVertical="15dp"
        android:layout_margin="50dp"


        />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura Maxima durante el ultimo año"
        android:layout_marginVertical="110dp"
        android:layout_margin="50dp"
         />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura Minima durante el ultimo año"
        android:layout_margin="50dp"
         />


</LinearLayout>